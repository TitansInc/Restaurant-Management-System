  var ht=document.getElementById("ht");
  var fat=document.getElementById("fat");
  var idm=document.getElementById("idm");
  var app=document.getElementById("app");
  var nam=document.getElementById("nam");
  var brief=document.getElementById("brief");
  var sub=document.getElementById("submit");
   
  if(f.value == "" || dis.value == "" || pol.value =="" || datem.value =="" || dater.value == "" || age.value =="" || complex.value =="" || ht.value == "" || fat.value == "" || idm.value =="" || app.value =="" || nam.value == "" || brief.value == "")
	{
		alert("Fill all the fields");sub.innerHTML=("");return false;
	}

}
